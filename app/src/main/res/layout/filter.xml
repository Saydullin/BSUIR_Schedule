<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="?attr/primaryOnColor">

    <com.bsuir.bsuirschedule.presentation.views.EditTextView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/search_placeholder" />

    <TextView
        android:id="@+id/filter_amount"
        style="@style/Theme.BSUIRSchedule.TextView.Hint"
        android:layout_marginTop="5dp"
        android:textColor="?attr/textHintColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        tools:text="найдено 428 групп" />

</LinearLayout>


