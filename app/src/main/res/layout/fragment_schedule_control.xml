<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    tools:context=".presentation.fragments.ScheduleControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary"
        android:padding="20dp"
        android:orientation="vertical">

        <include android:id="@+id/schedule_subgroup_settings"
            layout="@layout/settings_subgroup" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <include android:id="@+id/schedule_settings"
            layout="@layout/settings_schedule" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <include android:id="@+id/exams_settings"
            layout="@layout/settings_exams" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <include android:id="@+id/alarm_settings"
            layout="@layout/settings_alarm" />

    </LinearLayout>

</ScrollView>


