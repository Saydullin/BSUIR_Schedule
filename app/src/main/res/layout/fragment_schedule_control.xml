<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    tools:context=".presentation.fragments.ScheduleControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary"
        android:padding="20dp"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/schedule_settings_subgroup"
            tools:layout="@layout/settings_subgroup"
            android:name="com.bsuir.bsuirschedule.presentation.fragments.scheduleSettings.ScheduleSettingsSubgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/schedule_settings_schedule"
            tools:layout="@layout/settings_schedule"
            android:name="com.bsuir.bsuirschedule.presentation.fragments.scheduleSettings.ScheduleSettingsSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/schedule_settings_exams"
            tools:layout="@layout/settings_exams"
            android:name="com.bsuir.bsuirschedule.presentation.fragments.scheduleSettings.ScheduleSettingsExams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/schedule_settings_alarm"
            tools:layout="@layout/settings_alarm"
            android:name="com.bsuir.bsuirschedule.presentation.fragments.scheduleSettings.ScheduleSettingsAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>


