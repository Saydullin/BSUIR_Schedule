<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#303030"
    android:paddingVertical="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/subject_current_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:src="@drawable/ic_two_dots" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:25"
            android:textColor="#d5dfe1"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/endLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:45"
            android:textSize="14sp"
            android:textColor="#d5dfe1"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/subject_type_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_subject_type" />

            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:layout_marginStart="10dp"
                android:text="ПРЕДМЕТ"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="#d5dfe1" />


            <LinearLayout
                android:id="@+id/subgroup_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/subject_subgroup_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:src="@drawable/subgroup" />

                <TextView
                    android:id="@+id/lesson_subgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="5dp"
                    android:text="2"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#d5dfe1" />

            </LinearLayout>

            <TextView
                android:id="@+id/lesson_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="416-4 к."
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="#d5dfe1"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:id="@+id/lesson_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Степанов А. А."
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="#939ea2" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


