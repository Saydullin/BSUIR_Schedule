<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BSUIRSchedule" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/danger</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorOnBackground">@color/dark</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSecondaryVariant">@color/text_dark_hint</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:textColorPrimaryDisableOnly">@color/text_dark</item>
        <!--        <item name="android:itemBackground">@color/white</item>-->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColor">@color/text_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Custom theme colors. -->
        <item name="primaryColor">@color/primary</item>
        <item name="primaryOnColor">@color/white</item>
        <item name="primaryOnHintColor">@color/white_hint</item>
        <item name="dialogBg">@color/white</item> <!-- FIXME SDK 33+ -->
        <item name="primaryTextColor">@color/white</item>
        <item name="secondaryOnHintColor">@color/secondary_hint</item>
        <item name="secondaryOnHintButtonColor">@color/secondary_hint</item>
        <item name="secondaryColor">@color/primary_holder</item>
        <item name="secondaryTextColor">@color/dark</item>
        <item name="textColor">@color/dark</item>
        <item name="textHintColor">@color/text_dark_hint</item>
    </style>

    <style name="Theme.BSUIRSchedule.Checkbox">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/font_regular_size</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="Theme.BSUIRSchedule.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">?attr/textHintColor</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/textHintColor</item>
        <item name="android:textSize">@dimen/font_medium_size</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="Theme.BSUIRSchedule.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/primaryColor</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.BSUIRSchedule.Button.Danger" parent="Theme.BSUIRSchedule.Button">
        <item name="android:backgroundTint">@color/danger</item>
    </style>

    <style name="Theme.BSUIRSchedule.Button.Hint" parent="Theme.BSUIRSchedule.Button">
        <item name="android:backgroundTint">?attr/secondaryOnHintButtonColor</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="Theme.BSUIRSchedule.ImageButton">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.BSUIRSchedule.ImageButton.Medium" parent="Theme.BSUIRSchedule.ImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/font_regular_size</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Title" parent="Theme.BSUIRSchedule.TextView">
        <item name="android:textSize">@dimen/font_medium_size</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Thin" parent="Theme.BSUIRSchedule.TextView">
        <item name="android:textSize">@dimen/font_thin_size</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Thin.Hint" parent="Theme.BSUIRSchedule.TextView.Thin">
        <item name="android:textColor">?attr/textHintColor</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Hint" parent="Theme.BSUIRSchedule.TextView">
        <item name="android:textColor">?attr/textHintColor</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Medium" parent="Theme.BSUIRSchedule.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Medium.Thin" parent="Theme.BSUIRSchedule.TextView.Medium">
        <item name="android:textSize">@dimen/font_thin_size</item>
    </style>

    <style name="Theme.BSUIRSchedule.TextView.Medium.Title" parent="Theme.BSUIRSchedule.TextView.Medium">
        <item name="android:textSize">@dimen/font_medium_size</item>
    </style>

    <style name="Theme.BSUIRSchedule.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.BSUIRSchedule.AppWidgetContainer" parent="Theme.BSUIRSchedule.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
        <item name="android:colorBackground">@color/on_primary</item>
    </style>

</resources>


